<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/fullInstructionButton"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:textSize="20dip"
        android:gravity="center" 
        android:layout_margin="10dip"
        android:text="@string/verbose_instructions" />
    
    <Button
        android:id="@+id/partialInstructionButton"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:textSize="20dip"
        android:gravity="center" 
        android:layout_margin="10dip"
        android:text="@string/partial_instructions" />
    
    <Button
        android:id="@+id/noInstructionButton"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:textSize="20dip"
        android:gravity="center"
        android:layout_margin="10dip" 
        android:text="@string/no_voice_instructions" />
        
        
    

</LinearLayout>