<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="@string/homescreen_text"
        android:textSize="20dip" />
    
    <Button
        android:id="@+id/clickButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/click_button"
        android:textSize="30dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/click_button"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/browseButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/browse_button"
        android:textSize="30dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/browse_button"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/options_button"
        android:textSize="30dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/options_button"
        android:layout_marginBottom="8dp" />

</LinearLayout>
